---
layout: base.njk
---

<article class="content">
  <!-- パンくずリスト -->
  <div class="breadcrumbs">
    <a href="/">ホーム</a>
    <span class="breadcrumbs-separator">/</span>
    <a href="/blog/">ブログ</a>
    <span class="breadcrumbs-separator">/</span>
    <span>{{ title }}</span>
  </div>

  <header class="post-header">
    <div class="post-meta">
      <div class="card-date">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <time>{{ page.date }}</time>
      </div>
      
      {% if tags %}
      <div class="tags">
        {% for tag in tags %}
        {% if tag != "post" %}
        <a href="/tags/{{ tag }}" class="tag">{{ tag }}</a>
        {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
    
    <h1 class="post-title">{{ title }}</h1>
    
    {% if description %}
    <p style="font-size: 1.1em; color: var(--text-light); font-style: italic;">{{ description }}</p>
    {% endif %}
  </header>
  
  <div class="post-content">
    {{ content | safe }}
  </div>
  
  <!-- 著者情報 -->
  <div class="author-info">
    <div class="avatar">
      <img src="{{ author.avatar }}" alt="{{ author.name }}のアバター">
    </div>
    <div class="author-bio">
      <h3>{{ author.name }}</h3>
      <p>{{ author.bio }}</p>
      <div class="author-links">
        <a href="https://{{ author.github }}" title="GitHub" target="_blank" rel="noopener">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  
  <!-- 関連記事 -->
  <div class="related-posts">
    <h2>他の記事も読んでみる</h2>
    
    <div class="grid" style="margin-top: 1.5rem;">
      {% set previousPost = collections.post | getPreviousCollectionItem %}
      {% set nextPost = collections.post | getNextCollectionItem %}
      
      {% if previousPost %}
      <div class="card">
        <div class="card-body">
          <span class="text-small text-light">&larr; 前の記事</span>
          <h3 class="card-title">
            <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
          </h3>
        </div>
      </div>
      {% endif %}
      
      {% if nextPost %}
      <div class="card">
        <div class="card-body">
          <span class="text-small text-light">次の記事 &rarr;</span>
          <h3 class="card-title">
            <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
          </h3>
        </div>
      </div>
      {% endif %}
    </div>
  </div>