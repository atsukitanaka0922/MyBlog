---
layout: base.njk
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
---

<div class="content">
  <div style="display: flex; align-items: center; margin-bottom: 2rem;">
    <a href="/blog/" style="margin-right: 0.5rem; color: var(--primary-color);">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
    </a>
    <h1>タグ: {{ tag }}</h1>
  </div>
  
  <div style="display: flex; flex-direction: column; gap: 2rem;">
    {% set taglist = collections[tag] %}
    {% for post in taglist | reverse %}
    <article class="card">
      <div class="card-body">
        <div class="card-date">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <time datetime="{{ post.date | date: "%Y-%m-%d" }}">{{ post.date | date: "%Y年%m月%d日" }}</time>
        </div>
        
        <h2 class="card-title">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        
        <p class="card-text">{{ post.data.description or post.data.excerpt or "この記事の説明はありません。" }}</p>
        
        <a href="{{ post.url }}">続きを読む &rarr;</a>
      </div>
    </article>
    {% endfor %}
  </div>
</div>